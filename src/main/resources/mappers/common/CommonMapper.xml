<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommonMapper">
    <sql id="paging">
        limit
        #{startPage}, #{perPageNum}
    </sql>

    <sql id="search">
        <!-- 검색 키워드가 있을 때 -->
        <if test="searchKeyword != null and searchKeyword != ''">
            <choose>
                <!-- 검색 유형이 있을 때 -->
                <when test="searchType != null and searchType != ''">
                    <choose>
                        <when test="searchType.equals('title')">
                            AND title LIKE CONCAT('%', #{searchKeyword}, '%')
                        </when>
                        <when test="searchType.equals('contents')">
                            AND contents LIKE CONCAT('%', #{searchKeyword}, '%')
                        </when>
                        <when test="searchType.equals('name')">
                            AND name LIKE CONCAT('%', #{searchKeyword}, '%')
                        </when>
                        <when test="searchType.equals('titleContents')">
                            AND (
                            title LIKE CONCAT('%', #{searchKeyword}, '%') or
                            contents LIKE CONCAT('%', #{searchKeyword}, '%')
                            )
                        </when>
                    </choose>
                </when>
                <!-- 검색 유형이 없을 때 -->
                <otherwise>
                    AND
                    (
                    title LIKE CONCAT('%', #{searchKeyword}, '%')
                    OR contents LIKE CONCAT('%', #{searchKeyword}, '%')
                    OR name LIKE CONCAT('%', #{searchKeyword}, '%')
                    )
                </otherwise>
            </choose>
        </if>
    </sql>
</mapper>